#:kivy 1.11.1

<CamViewer>:

    stp_label: step_label
    pos_lbl: pos_label

    #size: 300, 700
    orientation: "vertical"
    spacing: 5
    padding: 5, 5, 5, 5

    Label:
        size_hint: 1, .1
        font_size: 20
        text: ' Attune Controller v.0.1.1 '

    Button:
        size_hint: 1, .2
        text: "Home"
        #bold: True
        on_press: root.run_home_cycle()

    Button:
        size_hint: 1, .2
        text: "WB"
        on_press: root.set_white_balance()

    Button:
        size_hint: 1, .2
        text: "AF"
        #bold: True
        on_press: root.set_auto_focus()

    Button:
        size_hint: 1, .21
        text: "Focus Up"
        on_press: root.jog_focus(1)

    Button:
        size_hint: 1, .2
        text: "Focus Down"
        on_press: root.jog_focus(-1)

    BoxLayout:
        orientation: "horizontal"
        size_hint: 1, 0.15

        Label:
            text: "Step Size:"

        Label:
            id: step_label
            text: "0.0"

        BoxLayout:
            orientation: "vertical"

            Button:
                text: "+"
                on_press: root.adjust_step_size(0.1)
            Button:
                text: "-"
                on_press: root.adjust_step_size(-0.1)

    Label:
        id: pos_label
        size_hint: 1, 0.15
        text: "X, Y, X"

    BoxLayout:
        orientation: "horizontal"

        BoxLayout:
            orientation: "vertical"
            size_hint: 0.3, 1

            Button:
                text: 'Z+'
                on_press: root.jog_scope_position(0, 0, 1)

            Button:
                text: 'Z-'
                on_press: root.jog_scope_position(0, 0, -1)

        Button:
            text: "X-"
            on_press: root.jog_scope_position(-1, 0, 0)

        BoxLayout:
            orientation: "vertical"

            Button:
                text: 'Y+'
                on_press: root.jog_scope_position(0, 1, 0)

            Button:
                text: 'Y-'
                on_press: root.jog_scope_position(0, -1, 0)

        Button:
            text: "X+"
            on_press: root.jog_scope_position(1, 0, 0)


    Button:
        size_hint: 1, .2
        text: "CAPTURE"
        bold: True
        on_press: root.capture_panorama()

    Button:
        size_hint: 1, .1
        text: "Quit"
        #bold: True
        on_press: root.quit_app()